{
  "name": "nuxt-basic-auth-module",
  "version": "1.2.0",
  "description": "Provide basic authentication to your Nuxt.js application",
  "keywords": [
    "vue",
    "nuxt",
    "nuxt.js",
    "basic auth",
    "authentication"
  ],
  "main": "lib/module.js",
  "license": "MIT",
  "repository": "https://github.com/potato4d/nuxt-basic-auth-module",
  "scripts": {
    "dev": "nuxt test/fixture",
    "test": "jest",
    "test:unit": "jest --testRegex \"/test/unit/(.+)\\.test\\.js$\"",
    "test:system": "jest --testRegex \"/test/system/(.+)\\.test\\.js$\"",
    "test:coverage": "yarn test --coverage",
    "release": "standard-version && git push --follow-tags",
    "format": "prettier './{lib,test}/**/*.js' --write"
  },
  "devDependencies": {
    "cheerio": "1.0.0-rc.3",
    "codecov": "3.5.0",
    "jest": "23.6.0",
    "jsdom": "15.1.1",
    "nuxt": "2.8.1",
    "prettier": "1.18.2",
    "puppeteer": "1.19.0",
    "standard-version": "7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.{js,jsx}"
    ]
  },
  "dependencies": {
    "basic-auth": "^2.0.1",
    "consola": "^2.3.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
